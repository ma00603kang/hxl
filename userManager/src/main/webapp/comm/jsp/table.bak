.table-wrap{width:100%;font-size: 14px;color:#444;border: 1px #e6e6e6 solid;}
.table-head{padding-right:17px;background-color: #FAFAFA;border-bottom: 1px #e6e6e6 solid;}
.table-head-wrap{width:100%; overflow: hidden;}

.grid{table-layout: fixed;width: 100%;border-collapse: collapse;}
.grid tr th{height:40px;border-left: 1px #e6e6e6 solid;text-align: left;font-weight: normal;}
.grid tr th:first-child{border-left-width: 0;}
.grid tr td{border-left: 1px #e6e6e6 solid;border-bottom: 1px #e6e6e6 solid;overflow: hidden;height: 35px;}
.grid tr td:first-child{border-left: 0;}
.grid tr:last-child td{border-bottom: 0;}
.table-content{height:321px;width: 100%;overflow-x: auto;overflow-y: scoll;}